<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about_u">

    <ImageView
        android:id="@+id/logoid2"
        android:layout_width="206dp"
        android:layout_height="149dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/logo"
        tools:ignore="MissingConstraints"></ImageView>

    <TextView
        android:id="@id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoid2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="अपने बारे में बताए"
        android:textSize="45dp"
        android:inputType="text"
        android:textColor="#172CA5"></TextView>

    <EditText
        android:id="@+id/name"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_marginTop="12dp"
        android:hint="नाम"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:inputType="text"></EditText>
    <EditText
        android:id="@+id/dob"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="12dp"
        android:hint="जन्म की तारीख"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:inputType="time"></EditText>
    <EditText
        android:id="@+id/addr"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dob"
        android:layout_marginTop="12dp"
        android:hint="घर का पता"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:inputType="textLongMessage"></EditText>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_below="@id/addr"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/camera"
            android:layout_width="90dp"
            android:layout_height="59dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_camera_alt_black_24dp"
            tools:ignore="MissingConstraints"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="25dp"
            android:layout_marginLeft="550dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="अपना फोटो क्लिक करे"
            android:textSize="28dp"></TextView>
    </LinearLayout>

    <Button
        android:id="@+id/io"
        android:layout_width="189dp"
        android:layout_height="105dp"
        android:layout_below="@+id/l1"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="25dp"
        android:text="asdasd"
        android:textStyle="bold"
        android:foreground="#172CA5"></Button>

</RelativeLayout>